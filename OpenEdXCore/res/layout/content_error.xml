<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <org.edx.mobile.view.custom.IconImageViewXml
            android:id="@+id/content_error_icon"
            android:layout_width="@dimen/content_unavailable_error_icon_size"
            android:layout_height="@dimen/content_unavailable_error_icon_size"
            app:iconColor="@color/edx_grayscale_neutral_light"
            app:iconName="fa-exclamation-triangle" />

        <TextView
            android:id="@+id/content_error_text"
            style="@style/content_unavailable_error_text"
            android:visibility="visible"
            tools:text="@string/reset_no_network_message" />

    </LinearLayout>
</layout>
