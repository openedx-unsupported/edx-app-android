<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <org.edx.mobile.view.custom.SocialFacePileView
        android:id="@+id/group_list_face_pile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/group_list_rounded_top"
        app:avatarCount="4"
        app:avatarGap="10dp"
        app:borderRadius="@dimen/avatar_image_radius"
        app:overflowTextSize="26sp"
        android:gravity="center|left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/group_list_rounded_bottom">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:orientation="vertical">

            <org.edx.mobile.view.custom.ETextView
                android:id="@+id/group_name"
                style="@style/bold_grey_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text=""
                tools:text="A.I. Fundamentals Discussion Group"
                android:maxLines="2"
                android:textSize="16sp" />

            <org.edx.mobile.view.custom.ETextView
                android:id="@+id/group_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="A group about A.I."
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                style="@style/regular_grey_text" />

        </LinearLayout>

        <org.edx.mobile.view.custom.ETextView
            android:id="@+id/group_unread"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:minWidth="25dp"
            android:background="@drawable/group_unread_background"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center|center_vertical"
            style="@style/bold_text"
            tools:text="123"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical" />

        </LinearLayout>


</LinearLayout>