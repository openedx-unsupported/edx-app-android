<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/social_margin_bottom"
        android:layout_marginTop="@dimen/social_margin_top"
        android:gravity="center" >

        <View
            android:id="@+id/view1"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/grey_act_background" />

        <org.edx.mobile.view.custom.ETextView
            android:id="@+id/findcourse_tv"
            style="@style/semibold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/signin_with_text"
            android:textColor="#CC3c4045"
            android:textSize="14sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/grey_act_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <RelativeLayout
            android:id="@+id/facebook_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/img_facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_facebook_button"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgview_facebook"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/ic_facebook_img"
                    android:contentDescription="@string/app_name" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent_white_20" />

                <org.edx.mobile.view.custom.ETextView
                    android:id="@+id/fb_tv"
                    style="@style/regular_white_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/facebook_text"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/google_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/img_google"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_google_button"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgview_google"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_googleplus"
                    android:contentDescription="@string/app_name" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent_white_20" />

                <org.edx.mobile.view.custom.ETextView
                    android:id="@+id/google_tv"
                    style="@style/regular_white_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/google_text"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

  
    </LinearLayout>

</LinearLayout>