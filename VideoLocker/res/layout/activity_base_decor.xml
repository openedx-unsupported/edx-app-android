<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/widget_margin"
            android:paddingRight="@dimen/widget_margin"
            android:paddingTop="@dimen/widget_margin_half"
            android:paddingBottom="@dimen/widget_margin_half"
            android:background="@color/edx_utility_warning"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/banner_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/edx_grayscale_neutral_x_dark"
                android:textSize="@dimen/edx_small"
                tools:text="@string/banner_offline_header" />

            <org.edx.mobile.view.custom.IconImageViewXml
                android:layout_width="@dimen/fa_small"
                android:layout_height="@dimen/fa_small"
                app:iconColor="@color/edx_grayscale_neutral_x_dark"
                app:iconName="fa-info-circle" />
        </LinearLayout>

        <FrameLayout
            android:id="@android:id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/banner_expanded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/edx_margin"
        android:gravity="center_horizontal"
        android:background="@color/edx_utility_warning"
        android:textColor="@color/edx_grayscale_neutral_x_dark"
        android:textSize="@dimen/edx_small"
        android:visibility="gone"
        tools:text="@string/banner_offline_content" />
</merge>
