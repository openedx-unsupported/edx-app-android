<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/edx_brand_primary_base">

    <org.edx.mobile.view.custom.ETextView
        android:id="@+id/activity_title"
        style="@style/custom_activity_title" />

    <org.edx.mobile.view.custom.EButton
        android:id="@+id/actionbar_close_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:background="@drawable/ic_action_close"
        android:contentDescription="@string/close"
        android:visibility="visible"
        tools:targetApi="17" />

</RelativeLayout>