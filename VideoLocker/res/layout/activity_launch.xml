<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/launch_background"
        android:splitMotionEvents="false">

        <Button
            android:id="@+id/course_discovery_button"
            style="@style/course_discovery_button_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:alpha="0.78"
            android:background="@drawable/course_discovery_on_launch_button"
            android:text="@string/course_discovery"
            tools:textSize="@dimen/edx_large"
            tools:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/edx_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/edx_logo" />

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp">

            <Button
                android:id="@+id/launch_sign_up_button"
                style="@style/bold_white_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bt_signin_active"
                android:contentDescription="@string/sign_up_and_learn"
                android:padding="5dp"
                android:text="@string/sign_up_and_learn"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/launch_sign_in_button"
                style="@style/bold_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/launch_sign_up_button"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="center"
                android:text="@string/already_have_an_account"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>