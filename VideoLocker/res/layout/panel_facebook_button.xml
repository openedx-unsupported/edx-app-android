<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/facebook_layout"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_weight="0.5"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/img_facebook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_facebook_button"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgview_facebook"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/ic_facebook_img"
            android:contentDescription="@string/app_name"
            tools:targetApi="17" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/transparent_white_20" />

        <org.edx.mobile.view.custom.ETextView
            android:id="@+id/fb_tv"
            style="@style/regular_white_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/facebook_text"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>

