<?xml version="1.0" encoding="utf-8"?>
<!-- Define some bottom margin for the dropdown so that it
     doesn't align with the bottom of the screen, which would
     decrease it's popup-like appearance. -->
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/widget_margin">
    <shape>
        <solid
            android:color="@color/edx_grayscale_neutral_white" />
        <stroke
            android:width="@dimen/edx_hairline"
            android:color="@color/edx_grayscale_neutral_light" />
        <!-- No rounded corners at the top, as we're going for a
             continuous list view from the spinner selection
             without overlapping it. -->
        <corners
            android:radius="@dimen/edx_box_radius"
            android:topLeftRadius="0dp"
            android:topRightRadius="0dp" />
        <padding
            android:left="@dimen/edx_hairline"
            android:right="@dimen/edx_hairline"
            android:top="@dimen/edx_hairline"
            android:bottom="@dimen/edx_hairline" />
    </shape>
</inset>
