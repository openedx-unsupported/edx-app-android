<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Theme">
        <attr name="disableableButtonTextColor" format="color" />
        <!-- Menu popup that is aligned to the vertical edge
             of the screen -->
        <attr name="edgePopupMenuStyle" format="reference" />
        <!-- Spinner with the popup style -->
        <attr name="popupSpinnerStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PopupMenu">
        <attr name="android:minWidth" />
        <!-- Generic padding in addition to what's defined by
             the background drawable. -->
        <attr name="android:padding" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingBottom" />
        <attr name="android:paddingLeft" />
        <attr name="android:paddingRight" />
        <attr name="android:paddingStart" />
        <attr name="android:paddingEnd" />
        <attr name="itemVerticalPadding" format="dimension" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconDefaultSize" format="dimension" />
        <attr name="headerTextAppearance" format="reference" />
        <attr name="rowTextAppearance" format="reference" />
    </declare-styleable>
</resources>
