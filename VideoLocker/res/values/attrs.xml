<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Theme">
        <attr name="disableableButtonTextColor" format="color" />
        <!-- Menu popup that is aligned to the vertical edge
             of the screen -->
        <attr name="edgePopupMenuStyle" format="reference" />
        <!-- Spinner with the popup style -->
        <attr name="popupSpinnerStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="Spinner">
        <!-- The prompt to display when the spinner's dialog is shown. -->
        <attr name="android:prompt" />
        <!-- Display mode for spinner options. -->
        <attr name="android:spinnerMode" />
        <!-- Theme to use for the drop-down or dialog popup window. -->
        <attr name="popupTheme" />
        <!-- Width of the dropdown in spinnerMode="dropdown". -->
        <attr name="android:dropDownWidth" />
    </declare-styleable>

    <declare-styleable name="AlignedDropdownSpinner">
        <!-- Drawable used for the dropdown indicator. -->
        <attr name="dropDownIndicator" format="reference" />
        <!-- Tint to apply to the dropdown indicator. -->
        <attr name="dropDownIndicatorTint" format="color" />
        <!-- Blending mode used to apply the dropdown indicator tint. -->
        <attr name="dropDownIndicatorTintMode">
            <!-- The tint is drawn on top of the drawable.
                 [Sa + (1 - Sa)*Da, Rc = Sc + (1 - Sa)*Dc] -->
            <enum name="src_over" value="3" />
            <!-- The tint is masked by the alpha channel of the drawable. The drawable’s
                 color channels are thrown out. [Sa * Da, Sc * Da] -->
            <enum name="src_in" value="5" />
            <!-- The tint is drawn above the drawable, but with the drawable’s alpha
                 channel masking the result. [Da, Sc * Da + (1 - Sa) * Dc] -->
            <enum name="src_atop" value="9" />
            <!-- Multiplies the color and alpha channels of the drawable with those of
                 the tint. [Sa * Da, Sc * Dc] -->
            <enum name="multiply" value="14" />
            <!-- [Sa + Da - Sa * Da, Sc + Dc - Sc * Dc] -->
            <enum name="screen" value="15" />
            <!-- Combines the tint and drawable color and alpha channels, clamping the
                 result to valid color values. Saturate(S + D) -->
            <enum name="add" value="16" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PopupMenu">
        <attr name="android:minWidth" />
        <!-- Generic padding in addition to what's defined by
             the background drawable. -->
        <attr name="android:padding" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingBottom" />
        <attr name="android:paddingLeft" />
        <attr name="android:paddingRight" />
        <attr name="android:paddingStart" />
        <attr name="android:paddingEnd" />
        <attr name="itemVerticalPadding" format="dimension" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconDefaultSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="IconProgressBar">
        <attr name="indeterminateIconName" format="string" />
        <attr name="indeterminateIconColor" format="color" />
        <attr name="indeterminateIconPulse" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="dimension" />
        <attr name="delayMillis" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="progressBarLength" format="dimension" />
        <attr name="contourColor" format="color"/>
        <attr name="contourSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DisableableViewPager">
        <attr name="android:enabled" />
    </declare-styleable>
</resources>
