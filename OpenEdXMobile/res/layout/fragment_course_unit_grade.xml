<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


        <ImageView
            android:src="@drawable/alert"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/widget_margin_half"
            android:scaleType="centerInside"
            android:background="@color/grey"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/title"
            style="@style/whats_new_semibold_text"
            android:text="@string/course_on_web_title"
            tools:text="@string/course_on_web_title"
            android:textSize="@dimen/custom_x_small"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="@dimen/title_text_line_spacing"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/widget_margin_large"
            android:layout_marginLeft="@dimen/widget_margin_large"
            android:layout_marginRight="@dimen/widget_margin_large"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/widget_margin"
            android:layout_weight=".5"
            android:overScrollMode="never"
            android:layout_marginLeft="@dimen/widget_margin_large"
            android:layout_marginRight="@dimen/widget_margin_large"
            android:layout_marginBottom="@dimen/widget_margin">


            <TextView
                style="@style/description_paragraph_regular_text"
                android:layout_height="wrap_content"
                android:textSize="@dimen/edx_x_small"
                android:gravity="center_horizontal"
                android:text="@string/course_on_web_description"
                tools:text="@string/course_on_web_description" />

        </ScrollView>

        <Button
            android:id="@+id/view_on_web_button"
            style="@style/edX.Widget.SignInButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edx_action_button_height"
            android:letterSpacing="0.04"
            android:layout_marginTop="@dimen/widget_margin"
            android:layout_marginBottom="@dimen/widget_margin_large"
            android:layout_marginRight="@dimen/widget_margin_large"
            android:layout_marginLeft="@dimen/widget_margin_large"
            android:text="@string/leave_app"
            android:textAllCaps="true"
            android:textColor="@color/edx_brand_button_text"
            android:textSize="@dimen/edx_x_small" />

</LinearLayout>

