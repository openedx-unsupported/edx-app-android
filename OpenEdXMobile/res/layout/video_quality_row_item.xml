<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/edx_margin">

        <TextView
            android:id="@+id/tv_video_quality_row_title"
            style="@style/regular_primary_dark_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/iv_video_quality_check"
            android:textSize="@dimen/edx_small"
            tools:text="@string/auto_recommended_text" />

        <ImageView
            android:id="@+id/iv_video_quality_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/neutralBlack"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

    </RelativeLayout>
</layout>
