<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/panel_social_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_margin_double"
        android:layout_marginBottom="@dimen/edx_default_margin"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_button"
            style="@style/edX.Widget.SocialLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edx_neutral_x_dark_bordered_button"
            android:text="@string/sign_in_with_google"
            android:textColor="@color/neutralXDark"
            app:icon="@drawable/ic_google_logo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/facebook_button"
            style="@style/edX.Widget.SocialLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edx_default_margin"
            android:background="@color/fb_bg"
            android:text="@string/sign_in_with_facebook"
            android:textColor="@color/neutralWhite"
            app:icon="@drawable/ic_facebook_logo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/microsoft_button"
            style="@style/edX.Widget.SocialLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edx_default_margin"
            android:background="@color/microsoft_bg"
            android:text="@string/sign_in_with_microsoft"
            android:textColor="@color/neutralWhite"
            app:icon="@drawable/ic_microsoft_logo" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
