<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/sign_in_tv"
            android:importantForAccessibility="no"
            android:background="@drawable/new_launch_screen">

            <ImageView
                android:id="@+id/subodha_logo"
                android:layout_width="207dp"
                android:layout_height="76dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/subodha_learning_for_all"
                android:src="@mipmap/subodha_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/your_accessible_learning_platform"
                android:textColor="@color/seach_hint_color"
                android:layout_below="@+id/subodha_logo"
                android:text="@string/your_accessible_learning_platform" />
        </RelativeLayout>

        <Button
            android:id="@+id/sign_in_tv"
            style="@style/bold_white_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="12sp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/subodha_launch_bg"
            android:contentDescription="@string/sign_in_and_learn"
            android:padding="5dp"
            android:text="@string/sign_in_caps"
            android:textColor="@color/grey_text"
            android:textSize="15dp" />

