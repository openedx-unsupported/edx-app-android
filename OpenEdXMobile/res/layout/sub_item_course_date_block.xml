<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/widget_margin_half"
        android:paddingBottom="@dimen/widget_margin_half">

        <TextView
            android:id="@+id/title"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="@dimen/course_date_title_line_spacing"
            android:textColor="@color/switch_text_color"
            android:textSize="@dimen/edx_base"
            android:visibility="gone"
            tools:text="Course Start"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/description"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/switch_text_color"
            android:textSize="@dimen/edx_small"
            android:lineSpacingMultiplier="@dimen/course_date_desc_line_spacing"
            android:visibility="gone"
            tools:text="After this date, course content will be archived"
            tools:visibility="visible" />

    </LinearLayout>
</layout>
