<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:elevation="20dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/back"
                        android:importantForAccessibility="yes"
                        android:src="@drawable/ic_baseline_arrow_back_24_black" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/search_background_color"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edit_search"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/search_subodha"
                                android:layout_marginRight="35dp"
                                android:layout_marginStart="20dp"
                                android:cursorVisible="false"
                                android:background="@null"
                                android:layout_centerVertical="true" />

                            <ImageView
                                android:id="@+id/seach_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:contentDescription="@string/search"
                                android:src="@drawable/ic_baseline_search_24_grey" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/search_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginLeft="21dp"
                android:visibility="gone"
                android:layout_marginTop="50dp"
                android:textColor="@color/seach_hint_color"
                android:text="@string/search_results" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/shimmer_search_count"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/shimmer_placeholder" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/search_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/search_count_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_result"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="70dp" />

            <Button
                android:id="@+id/view_more_results"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="@string/view_more_results"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_load_more_results" />


        </LinearLayout>
    </ScrollView>
</layout>