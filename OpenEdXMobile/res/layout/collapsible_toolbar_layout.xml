<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/neutralWhite"
    android:theme="@style/AppTheme.AppBarOverlay">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edx_quadruple_margin"
        app:collapsedTitleGravity="center_vertical"
        app:collapsedTitleTextAppearance="@style/MainDashboardCollapsedToolbarTitle"
        app:expandedTitleGravity="center_vertical"
        app:expandedTitleMargin="0dp"
        app:expandedTitleMarginStart="@dimen/edx_default_margin"
        app:expandedTitleTextAppearance="@style/MainDashboardExpandedToolbarTitle"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/edx_button_height"
            android:background="@color/neutralWhite"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/container_padding"
            android:paddingEnd="@dimen/edx_default_margin"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:titleTextAppearance="@style/MainDashboardCollapsedToolbarTitle" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>

</com.google.android.material.appbar.AppBarLayout>
