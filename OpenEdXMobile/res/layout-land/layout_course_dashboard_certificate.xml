<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neutralWhite"
    android:orientation="horizontal"
    android:padding="@dimen/edx_default_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/course_certificate_logo_width"
        android:layout_height="@dimen/course_certificate_logo_height"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_new_cert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/edx_default_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/course_details_congratulations"
            android:textAllCaps="true"
            android:textColor="@color/primaryDarkColor"
            android:textSize="@dimen/edx_x_large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_details_earned_cert"
            android:textColor="@color/neutralXDark"
            android:textSize="@dimen/edx_small" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/edX.Widget.PrimaryActionButton"
            android:text="@string/course_details_view_cert_button" />

    </LinearLayout>

</LinearLayout>
